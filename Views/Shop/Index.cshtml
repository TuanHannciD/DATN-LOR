<script>
    $(document).ready(function () {

        // Format VND
        function formatVND(val) {
            return Number(val).toLocaleString('vi-VN') + " đ";
        }

        function unformatVND(str) {
            return parseInt(str.replace(/[^\d]/g, '')) || 0;
        }

        // Init price slider
        (function () {
            const $priceRange = $(".price-range");
            const min = parseInt($priceRange.data("min"));
            const max = parseInt($priceRange.data("max"));
            const $minInput = $("#minamount");
            const $maxInput = $("#maxamount");

            const currentMin = unformatVND($minInput.val());
            const currentMax = unformatVND($maxInput.val());

            $priceRange.slider({
                range: true,
                min: min,
                max: max,
                values: [currentMin, currentMax],
                slide: function (event, ui) {
                    $minInput.val(formatVND(ui.values[0]));
                    $maxInput.val(formatVND(ui.values[1]));
                }
            });

            // Format lần đầu
            $minInput.val(formatVND(currentMin));
            $maxInput.val(formatVND(currentMax));

            // Khi người dùng nhập vào ô input
            $minInput.on("change", function () {
                const val = unformatVND($(this).val());
                $priceRange.slider("values", 0, val);
                $(this).val(formatVND(val));
            });

            $maxInput.on("change", function () {
                const val = unformatVND($(this).val());
                $priceRange.slider("values", 1, val);
                $(this).val(formatVND(val));
            });
        })();

        // Xử lý chọn bộ lọc kiểu toggle radio
        function setupExclusiveSelectable(groupName) {
            $(`label[for^='${groupName}-']`).click(function (e) {
                e.preventDefault();
                const label = $(this);
                const radioId = label.attr('for');
                const radio = $('#' + radioId);

                if (label.hasClass('selected')) {
                    label.removeClass('selected');
                    radio.prop('checked', false);
                } else {
                    $(`label[for^='${groupName}-']`).removeClass('selected');
                    $(`input[name='${radio.attr("name")}']`).prop('checked', false);

                    label.addClass('selected');
                    radio.prop('checked', true);
                }
            });
        }

        setupExclusiveSelectable('dm');
        setupExclusiveSelectable('mau');
        setupExclusiveSelectable('size');

        // Gửi dữ liệu lọc
        $('#apply-filters').click(function () {
            const min = unformatVND($('#minamount').val());
            const max = unformatVND($('#maxamount').val());

            const danhMucId = $('.filter-danhmuc-radio:checked').val();
            const mauSacId = $('.filter-mau-radio:checked').val();
            const kichThuocId = $('.filter-size-radio:checked').val();

            $.ajax({
                url: '/Shop/FilterProducts',
                method: 'POST',
                data: {
                    danhMucIds: danhMucId ? [danhMucId] : [],
                    mauSacIds: mauSacId ? [mauSacId] : [],
                    kichThuocIds: kichThuocId ? [kichThuocId] : [],
                    minPrice: min,
                    maxPrice: max
                },
                success: function (data) {
                    $('#product-list').html(data);
                    $('.set-bg').each(function () {
                        var bg = $(this).data('setbg');
                        $(this).css('background-image', 'url(' + bg + ')');
                    });
                }
            });
        });
    });
</script>