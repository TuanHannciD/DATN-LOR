@model IEnumerable<AuthDemo.Models.SanPhamChiTiet>
@{
    ViewData["Title"] = "Danh sách sản phẩm chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="mdi mdi-cube-outline"></i> Danh sách sản phẩm chi tiết</h4>
        <a class="btn btn-primary" href="@Url.Action("Create", "SanPhamChiTiet", new { area = "Admin" })">
            <i class="mdi mdi-plus"></i> Thêm sản phẩm chi tiết
        </a>
    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Mã sản phẩm chi tiết</th>
                        <th>Tên sản phẩm</th>
                        <th>Mô tả</th>
                        <th>Số lượng bán</th>
                        <th>Giá</th>
                        <th>Ảnh đại diện</th>
                        <th>Đánh giá</th>
                        <th>Chất liệu</th>
                        <th>Hãng</th>
                        <th>Màu sắc</th>
                        <th>Size</th>
                        <th>Thao tác</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.ID_Spct</td>
                            <td>@item.TenSp</td>
                            <td>@item.MoTa</td>
                            <td>@item.SoLuongBan</td>
                            <td>@item.Gia</td>
                            <td>@item.AnhDaiDien</td>
                            <td>@item.DanhGia</td>
                            <td>@item.ID_ChatLieu</td>
                            <td>@item.ID_Hang</td>
                            <td>@item.ID_MauSac</td>
                            <td>@item.ID_Size</td>
                            <td>
                                <a class="btn btn-warning btn-sm"
                                    href="@Url.Action("Edit", "SanPhamChiTiet", new { id = item.ID_Spct, area = "Admin" })">Sửa</a>
                                <a class="btn btn-danger btn-sm"
                                    href="@Url.Action("Delete", "SanPhamChiTiet", new { id = item.ID_Spct, area = "Admin" })"
                                    onclick="return confirm('Bạn có chắc muốn xóa?');">Xóa</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>