    <style>
        li.active > a {
            color: #7fad39 !important; /* Màu chữ cho trang đang truy cập */
            font-weight: bold;
        }
        /* Ensure Tailwind dropdown is not overridden by Bootstrap */
        /* Container user menu */
        .user-menu {
            position: relative;
            display: inline-block;
            cursor: pointer;
        }

        /* Tên người dùng */
        .user-name {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            background: none;
            border: none;
            padding: 6px 0;
            color: #333;
            font-size: 14px;
            cursor: pointer;
        }

            .user-name i {
                font-size: 14px;
            }

        .user-link {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            color: #333;
            text-decoration: none;
        }

            .user-link:hover {
                color: #007bff;
            }

        /* Dropdown */
        .dropdown {
            position: absolute;
            top: 100%;
            right: 0;
            background: white;
            border: 1px solid #ddd;
            border-radius: 4px;
            min-width: 160px;
            display: none;
            flex-direction: column;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
            z-index: 1000;
        }

            .dropdown a {
                padding: 8px 12px;
                text-decoration: none;
                color: #333;
                display: block;
            }

                .dropdown a:hover {
                    background-color: #f0f0f0;
                }

        /* Hover mở menu */
        .user-menu:hover .dropdown {
            display: flex;
        }

        /* Nút đăng nhập */
        .user-link,
        .login-btn {
            display: inline-flex;
            align-items: center;
            gap: 6px;
            padding: 6px 0;
            background: none;
            border: none;
            text-decoration: none;
            color: #333;
            font-size: 14px;
            cursor: pointer;
            transition: color 0.2s;
        }

            .user-link:hover,
            .login-btn:hover {
                color: #7fad39; /* màu xanh khi hover */
            }

            .user-link i,
            .login-btn i {
                font-size: 14px;
            }

            
    </style>



