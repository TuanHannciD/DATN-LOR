@{
    ViewData["Title"] = "Lỗi thanh toán";
    Layout = "_LayoutAdmin";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body text-center">
                    <div class="mb-4">
                        <i class="mdi mdi-alert-circle text-danger" style="font-size: 4rem;"></i>
                    </div>
                    <h2 class="text-danger mb-3">Thanh toán thất bại!</h2>
                    <div class="row justify-content-center">
                        <div class="col-md-6">
                            <div class="card bg-light">
                                <div class="card-body">
                                    <h5 class="card-title">Thông tin lỗi</h5>
                                    <p class="text-muted">@Model</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="mt-4">
                        <a href="/Admin/BanHangTaiQuay" class="btn btn-primary">
                            <i class="mdi mdi-arrow-left"></i> Quay lại bán hàng
                        </a>
                        <button onclick="history.back()" class="btn btn-secondary ml-2">
                            <i class="mdi mdi-refresh"></i> Thử lại
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div> 