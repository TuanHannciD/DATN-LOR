    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>Admin Dashboard - Purple Admin</title>
    <!-- plugins:css -->
    <link rel="stylesheet" href="~/PurpleAdmin-Free-Admin-Template-1.0.0/assets/vendors/mdi/css/materialdesignicons.min.css">
    <link rel="stylesheet" href="~/PurpleAdmin-Free-Admin-Template-1.0.0/assets/vendors/ti-icons/css/themify-icons.css">
    <link rel="stylesheet" href="~/PurpleAdmin-Free-Admin-Template-1.0.0/assets/vendors/css/vendor.bundle.base.css">
    <link rel="stylesheet" href="~/PurpleAdmin-Free-Admin-Template-1.0.0/assets/vendors/font-awesome/css/font-awesome.min.css">
    <!-- endinject -->
