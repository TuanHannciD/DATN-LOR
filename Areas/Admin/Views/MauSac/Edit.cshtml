@model AuthDemo.Models.MauSac
@{
    ViewData["Title"] = "Sửa màu sắc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-warning text-white">
                <h4 class="mb-0"><i class="mdi mdi-pencil"></i> Sửa màu sắc</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-controller="MauSac" asp-area="Admin" method="post">
                    <input type="hidden" asp-for="ColorID" />
                    <div class="form-group mb-3">
                        <label asp-for="MaMau" class="form-label fw-bold">Mã màu</label>
                        <input asp-for="MaMau" class="form-control rounded-3" data-validate="required|min:2" data-label="Mã màu sắc" placeholder="Nhập mã màu..." />
                        <span asp-validation-for="MaMau" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TenMau" class="form-label fw-bold">Tên màu sắc</label>
                        <input asp-for="TenMau" class="form-control rounded-3" data-validate="required|min:2" data-label="Tên màu sắc" placeholder="Nhập tên màu sắc..." />
                        <span asp-validation-for="TenMau" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="mdi mdi-content-save"></i> Lưu
                        </button>
                        <a class="btn btn-secondary px-4" href="@Url.Action("Index", "MauSac", new { area = "Admin" })">
                            <i class="mdi mdi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>