@model IEnumerable<AuthDemo.Models.ViewModels.GetAllHoaDonVM>
@{
    ViewData["Title"] = "Danh sách hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card mt-4">
    <!-- Bộ lọc thời gian -->
    <div class="card-header d-flex justify-content-between align-items-center">
        <div class="d-flex align-items-center gap-2 mb-3">
            <label for="thoiGianSelect" class="mb-0 fw-bold">
                <i class="mdi mdi-calendar-clock me-1"></i>
                Lọc theo thời gian:</label>

            <select id="thoiGianSelect" class="form-select form-select-sm" style="width: 200px;">
                <option value="">Tất cả</option>
                <option value="today" selected>Hôm nay</option>
                <option value="month">Tháng này</option>
                <option value="year">Năm nay</option>
                <option value="custom">Khác...</option>
            </select>

            <!-- Luôn hiện ngày -->
            <input type="datetime-local" id="startDate" class="form-control form-control-sm" style="width: 180px;" />
            <span class="fw-bold">→</span>
            <input type="datetime-local" id="endDate" class="form-control form-control-sm" style="width: 180px;" />


        </div>
    </div>

    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="mdi mdi-file-document-box"></i> Danh sách hóa đơn</h4>

    </div>

    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>ID</th>
                        <th>Khách hàng</th>
                        <th>SĐT</th>
                        <th>Trạng thái đơn hàng</th>
                        <th>Hình thức thanh toán</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái thanh toán</th>
                        <th>Người tạo</th>
                        <th>Ngày tạo</th>

                        <th class="text-center">Thao tác</th>
                    </tr>
                    <!-- Row filter -->
                    <tr>
                        <th><input type="text" class="form-control form-control-sm filter-input" id="idFilter"
                                placeholder="Lọc ID">
                        </th>
                        <th><input type="text" class="form-control form-control-sm filter-input"
                                placeholder="Lọc tên KH" id="nameFilter"></th>
                        <th><input type="number" class="form-control form-control-sm filter-input" id="phoneFilter"
                                placeholder="Lọc SĐT">
                        </th>
                        <th>
                            <select class="form-select form-select-sm filter-input" id="trangThaiSelect">
                                <option value="">Tất cả</option>
                                @foreach (var item in (List<SelectListItem>)ViewBag.TrangThaiDonHangList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </th>
                        <th>
                            <select class="form-select form-select-sm filter-input" id="hinhThucSelect">
                                <option value="">Tất cả</option>
                                @foreach (var item in (List<SelectListItem>)ViewBag.HinhThucThanhToanList)
                                {
                                    <option value="@item.Value">@item.Text</option>
                                }
                            </select>
                        </th>
                        <th></th>
                        <th>
                            <select class="form-select form-select-sm filter-input" id="trangThaiTT">
                                <option value="">Tất cả</option>
                                <option value=true>Đã thanh toán</option>
                                <option value=false>Chưa thanh toán</option>
                            </select>
                        </th>
                        <th><input type="text" class="form-control form-control-sm filter-input"
                                placeholder="Lọc người tạo" id="nameCreateFilter"></th>
                        <th></th>
                        <th> <button id="applyFilter" class="btn btn-sm btn-primary text-center">Áp dụng</button></th>
                    </tr>
                </thead>
                <tbody id="hoaDonTableBody">
                    <!-- Dữ liệu sẽ load bằng AJAX -->
                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal hiển thị hóa đơn -->
    <div class="modal fade" id="isOpenModal" tabindex="-1" aria-labelledby="isOpenModalLabel">
        <div class="modal-dialog modal-xl modal-dialog-centered modal-dialog-scrollable">
            <div class="modal-content border-0 shadow-lg">
                <div class="modal-header bg-primary text-white">
                    <h5 class="modal-title" id="isOpenModalLabel">
                        <i class="mdi mdi-invoice-list"></i> Hóa đơn chi tiết
                    </h5>
                    <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"
                        aria-label="Đóng"></button>
                </div>
                <div class="modal-body">
                    <div class="container-fluid">
                        <h5 class="mb-3 text-secondary">Thông tin khách hàng</h5>
                        <div class="row mb-2">
                            <div class="col-md-6"><strong>Họ tên:</strong> <span id="modalHoTen"></span></div>
                            <div class="col-md-6"><strong>Email:</strong> <span id="modalEmail"></span></div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-6"><strong>Điện thoại:</strong> <span id="modalSoDienThoai"></span></div>
                            <div class="col-md-6"><strong>Địa chỉ:</strong> <span id="modalDiaChi"></span></div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-6"><strong>Tổng tiền:</strong> <span id="modalTongTien"></span> VNĐ</div>
                            <div class="col-md-6"><strong>Trạng thái:</strong> <span id="modalTrangThai"></span></div>
                        </div>
                        <div class="row mb-2">
                            <div class="col-md-6"><strong>Phương thức thanh toán:</strong> <span
                                    id="modalPhuongThucTT"></span></div>
                            <div class="col-md-6"><strong>Phương thức vận chuyển:</strong> <span
                                    id="modalPhuongThucVC"></span></div>
                        </div>
                        <div class="col-md-4"><strong>Ghi chú:</strong> <span id="modalGhiChu"></span></div>


                        <h5 class="mt-4 mb-3 text-secondary">Chi tiết sản phẩm</h5>
                        <div class="table-responsive">
                            <table class="table table-striped table-bordered align-middle">
                                <thead class="table-dark text-center">
                                    <tr>
                                        <th>Giày</th>
                                        <th>Màu sắc</th>
                                        <th>Size</th>
                                        <th>Số lượng</th>
                                        <th>Đơn giá</th>
                                        <th>Chiết khấu (%)</th>
                                        <th>Chiết khấu tiền</th>
                                        <th>Tặng kèm</th>
                                    </tr>
                                </thead>
                                <tbody id="modalChiTietBody" class="text-center">
                                    <!-- Render bảng tại hoadonjs -->
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                <div class="modal-footer justify-content-end">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        <i class="mdi mdi-close-circle"></i> Đóng
                    </button>
                </div>
            </div>
        </div>
    </div>


</div>
</div>




@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="module" src="~/js/hoadon.js"></script>
}
