@model AuthDemo.Models.SanPhamChiTiet
@{
    ViewData["Title"] = "Sửa sản phẩm chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-warning text-white">
                <h4 class="mb-0"><i class="mdi mdi-pencil"></i> Sửa sản phẩm chi tiết</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-controller="SanPhamChiTiet" asp-area="Admin" method="post">
                    <input type="hidden" asp-for="ID_Spct" />
                    <div class="form-group">
                        <label asp-for="ID_Sp" class="form-label fw-bold">Mã sản phẩm</label>
                        <input asp-for="ID_Sp" class="form-control" />
                        <span asp-validation-for="ID_Sp" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TenSp" class="form-label fw-bold">Tên sản phẩm</label>
                        <input asp-for="TenSp" class="form-control" />
                        <span asp-validation-for="TenSp" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MoTa" class="form-label fw-bold">Mô tả</label>
                        <input asp-for="MoTa" class="form-control" />
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SoLuongBan" class="form-label fw-bold">Số lượng bán</label>
                        <input asp-for="SoLuongBan" class="form-control" />
                        <span asp-validation-for="SoLuongBan" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="AnhDaiDien" class="form-label fw-bold">Ảnh đại diện</label>
                        <input asp-for="AnhDaiDien" class="form-control" />
                        <span asp-validation-for="AnhDaiDien" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DanhGia" class="form-label fw-bold">Đánh giá</label>
                        <input asp-for="DanhGia" class="form-control" />
                        <span asp-validation-for="DanhGia" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ID_ChatLieu" class="form-label fw-bold">Chất liệu</label>
                        <input asp-for="ID_ChatLieu" class="form-control" />
                        <span asp-validation-for="ID_ChatLieu" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ID_Hang" class="form-label fw-bold">Hãng</label>
                        <input asp-for="ID_Hang" class="form-control" />
                        <span asp-validation-for="ID_Hang" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ID_MauSac" class="form-label fw-bold">Màu sắc</label>
                        <input asp-for="ID_MauSac" class="form-control" />
                        <span asp-validation-for="ID_MauSac" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ID_Size" class="form-label fw-bold">Kích thước</label>
                        <input asp-for="ID_Size" class="form-control" />
                        <span asp-validation-for="ID_Size" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="mdi mdi-content-save"></i> Lưu
                        </button>
                        <a class="btn btn-secondary px-4"
                            href="@Url.Action("Index", "SanPhamChiTiet", new { area = "Admin" })">
                            <i class="mdi mdi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>