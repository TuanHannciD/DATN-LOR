@{
    ViewData["Title"] = "CheckOut";
    Layout = "~/Views/Shared/_LayoutCheckOut.cshtml";
}
@model List<ChiTietGioHang>
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<div class="container mx-auto px-6 py-12 relative overflow-hidden pt-36">
    <div class="row">
        <div class="col-lg-12 text-center mb-8">
            <h6 class="text-2xl font-serif font-semibold text-gray-700 animate-pulse-slow">
                <span class="inline-block mr-3 text-accent-500 animate-bounce">🎟️</span>
                Có mã giảm giá? <a href="#" class="relative text-accent-600 hover:text-accent-800 transition-colors duration-300 underline-hover group">
                    Nhấn vào đây
                    <span class="absolute bottom-0 left-0 w-0 h-1 bg-accent-500 transition-all duration-300 group-hover:w-full"></span>
                </a> để nhập mã của bạn
            </h6>
        </div>
    </div>
    <div class="checkout__form bg-white/95 rounded-3xl shadow-2xl p-6 md:p-8 lg:p-10 transform transition-all duration-700 hover:shadow-3xl hover:-translate-y-3 backdrop-blur-md relative z-10 overflow-hidden">
        <div class="absolute inset-0 bg-gradient-to-br from-accent-100/30 to-primary-100/30 opacity-50 animate-gradient-flow"></div>
        <h4 class="text-4xl font-serif font-extrabold text-gray-900 mb-8 text-center bg-gradient-to-r from-accent-600 via-primary-600 to-accent-400 bg-clip-text text-transparent animate-gradient-flow relative z-10">
            Thông Tin Đặt Hàng
        </h4>
        <form action="@Url.Action("DatHang", "HoaDon")" method="post" class="grid grid-cols-1 lg:grid-cols-2 gap-6 relative z-10">
            <div class="lg:col-span-1 space-y-6">
                <div class="checkout__input animate-fade-in-up">
                    <label for="hoten" class="block text-lg font-bold text-gray-800 mb-2 tracking-wide">Họ Tên <span class="text-accent-500">*</span></label>
                    <input type="text" id="hoten" name="hoten" class="w-full px-5 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-4 focus:ring-accent-400/40 transition-all duration-300 hover:border-accent-500 bg-white/80 shadow-sm hover:shadow-md">
                </div>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                    <div class="checkout__input animate-fade-in-up delay-100">
                        <label for="sdt" class="block text-lg font-bold text-gray-800 mb-2 tracking-wide">Số điện thoại <span class="text-accent-500">*</span></label>
                        <input type="text" id="sdt" name="sdt" class="w-full px-5 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-4 focus:ring-accent-400/40 transition-all duration-300 hover:border-accent-500 bg-white/80 shadow-sm hover:shadow-md">
                    </div>
                    <div class="checkout__input animate-fade-in-up delay-200">
                        <label for="email" class="block text-lg font-bold text-gray-800 mb-2 tracking-wide">Email <span class="text-accent-500">*</span></label>
                        <input type="text" id="email" name="email" class="w-full px-5 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-4 focus:ring-accent-400/40 transition-all duration-300 hover:border-accent-500 bg-white/80 shadow-sm hover:shadow-md">
                    </div>
                </div>
                <div class="checkout__input animate-fade-in-up delay-300">
                    <label for="diachi" class="block text-lg font-bold text-gray-800 mb-2 tracking-wide">Địa chỉ <span class="text-accent-500">*</span></label>
                    <input type="text" placeholder="Nhập địa chỉ giao hàng" class="w-full px-5 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-4 focus:ring-accent-400/40 transition-all duration-300 hover:border-accent-500 bg-white/80 shadow-sm hover:shadow-md" id="diachi" name="diachi">
                </div>
                <div class="checkout__input animate-fade-in-up delay-400">
                    <label for="ghichu" class="block text-lg font-bold text-gray-800 mb-2 tracking-wide">Ghi chú <span class="text-accent-500">*</span></label>
                    <textarea placeholder="Ghi chú cho đơn hàng" class="w-full px-5 py-3 border border-gray-200 rounded-xl focus:outline-none focus:ring-4 focus:ring-accent-400/40 transition-all duration-300 hover:border-accent-500 bg-white/80 shadow-sm hover:shadow-md resize-none h-32" id="ghichu" name="ghichu"></textarea>
                </div>
            </div>
            <div class="lg:col-span-1">
                <div class="checkout__order bg-gradient-to-br from-white to-primary-50 rounded-2xl p-8 shadow-inner animate-fade-in-right relative overflow-hidden">
                    <div class="absolute inset-0 bg-accent-100/20 animate-pulse-slow"></div>
                    <h4 class="text-3xl font-serif font-extrabold text-gray-900 mb-6 text-center bg-gradient-to-r from-accent-600 via-primary-600 to-accent-400 bg-clip-text text-transparent animate-gradient-flow relative z-10">
                        Đơn Hàng Của Bạn
                    </h4>
                    <div class="checkout__order__products text-xl font-bold text-gray-800 mb-5 relative z-10">Sản Phẩm <span class="text-primary-900 font-extrabold">Tổng</span></div>
                    <ul class="space-y-5 mb-8 relative z-10">
                        @foreach (var item in Model)
                        {
                            <input type="hidden" name="selectedIds" value="@item.ShoeDetailID">
                            <input type="hidden" name="quantities" value="@item.SoLuong">
                            decimal tong = item.SoLuong * item.ChiTietGiay.Gia;
                            <li class="flex justify-between items-center text-lg font-semibold text-gray-800 animate-slide-in border-b border-gray-100 pb-3 hover:bg-accent-50/50 transition-all duration-300 rounded-lg px-3">
                                <span class="flex-1 truncate">@item.ChiTietGiay.Giay.TenGiay (@item.ChiTietGiay.MauSac.TenMau, @item.ChiTietGiay.KichThuoc.TenKichThuoc) x @item.SoLuong</span>
                                <span class="text-primary-900 font-extrabold">@item.ChiTietGiay.Gia.ToString("N0") VNĐ</span>
                            </li>
                        }
                    </ul>
                    <div class="checkout__order__total text-2xl font-extrabold text-gray-900 mb-8 relative z-10">
                        Tổng tiền hàng <span  class="text-accent-600">@ViewBag.TongTien1.ToString("N0") VNĐ</span>
                    </div>
                    <div class="checkout__order__total text-2xl font-extrabold text-gray-900 mb-8 relative z-10">
                        Phí vận chuyển  <span  class="text-accent-600">@ViewBag.Ship.ToString("N0") VNĐ</span>
                    </div>
                    <div class="checkout__order__total text-2xl font-extrabold text-gray-900 mb-8 relative z-10">
                        Tổng <span id="tongtien" name="tongtien" class="text-accent-600">@ViewBag.TongTien.ToString("N0") VNĐ</span>
                    </div>
                    <div class="checkout__input__checkbox mb-6 relative z-10">
                        <label for="payment" class="flex items-center text-lg font-semibold text-gray-800 cursor-pointer group">
                            Thanh toán khi nhận
                            <input type="radio" name="phuongthuc" id="payment" value="0"
                                   class="ml-4 w-6 h-6 border-2 border-gray-300 rounded-full focus:ring-2 focus:ring-accent-500 transition-all duration-200 cursor-pointer checked:bg-accent-500 checked:border-accent-500">
                        </label>
                    </div>

                    <div class="checkout__input__checkbox mb-8 relative z-10">
                        <label for="paypal" class="flex items-center text-lg font-semibold text-gray-800 cursor-pointer group">
                            Thanh toán VnPay
                            <input type="radio" name="phuongthuc" id="paypal" value="3"
                                   class="ml-4 w-6 h-6 border-2 border-gray-300 rounded-full focus:ring-2 focus:ring-accent-500 transition-all duration-200 cursor-pointer checked:bg-accent-500 checked:border-accent-500">
                        </label>
                    </div>

                    <!-- Hidden input để truyền lên server -->
                    <input type="hidden" id="selectedMethod" name="selectedMethod" value="">
                    <input type="hidden" id="selectedMethod" name="PhuongThuc" />
                    <button type="submit" id="submit-order" class="site-btn w-full py-4 bg-gradient-to-r from-accent-600 to-primary-600 text-white font-extrabold rounded-2xl hover:from-accent-700 hover:to-primary-700 transition-all duration-500 transform hover:scale-105 hover:shadow-xl animate-pulse-slow text-xl relative z-10 overflow-hidden">
                        <span class="relative z-10">Đặt Hàng</span>
                        <span class="absolute inset-0 bg-accent-400 opacity-0 group-hover:opacity-20 transition-opacity duration-300"></span>
                    </button>
                </div>
            </div>
        </form>
        <!-- Enhanced Dream Elements -->
        <div class="dream-element w-96 h-96 bg-accent-200/30 top-[-120px] left-[-120px] animate-dream-float"></div>
        <div class="dream-element w-80 h-80 bg-primary-100/30 bottom-[-100px] right-[-100px] animate-dream-float reverse"></div>
        <div class="dream-element w-64 h-64 bg-accent-100/30 top-[40%] left-[5%] animate-dream-float delay-200"></div>
        <div class="dream-element w-56 h-56 bg-primary-200/30 bottom-[15%] right-[5%] animate-dream-float reverse delay-300"></div>
    </div>
</div>

<style>
    .checkout__form {
        position: relative;
        overflow: hidden;
        backdrop-filter: blur(8px);
        border: 1px solid rgba(255, 255, 255, 0.2);
    }

    .site-btn {
        position: relative;
        padding: 1.25rem 2.5rem;
        border: none;
        border-radius: 1.5rem;
        cursor: pointer;
        transition: all 0.5s cubic-bezier(0.25, 1, 0.5, 1);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

        .site-btn:hover {
            transform: translateY(-6px);
            box-shadow: 0 15px 40px rgba(0, 0, 0, 0.3);
        }

    .checkout__input__checkbox .checkmark {
        position: relative;
        height: 1.5rem;
        width: 1.5rem;
        background-color: #fff;
        border-radius: 0.375rem;
        transition: all 0.3s ease;
    }

    .checkout__input__checkbox input:checked ~ .checkmark {
        background-color: #FF6B6B;
        border-color: #FF6B6B;
    }

        .checkout__input__checkbox input:checked ~ .checkmark:after {
            content: '';
            position: absolute;
            display: block;
            left: 0.55rem;
            top: 0.3rem;
            width: 0.4rem;
            height: 0.8rem;
            border: solid white;
            border-width: 0 2px 2px 0;
            transform: rotate(45deg);
            transition: all 0.3s ease;
        }

    .dream-element {
        position: absolute;
        border-radius: 50%;
        opacity: 0.35;
        filter: blur(3rem);
        z-index: -1;
        animation: dreamFloat 20s ease-in-out infinite;
    }

    keyframes dreamFloat {
        0%, 100%

    {
        transform: translate(0, 0) rotate(0deg);
    }

    25% {
        transform: translate(30px, -30px) rotate(8deg);
    }

    50% {
        transform: translate(0, -10px) rotate(-8deg);
    }

    75% {
        transform: translate(-30px, 20px) rotate(5deg);
    }

    }

    keyframes gradientFlow {
        0%

    {
        background-position: 0% 50%;
    }

    50% {
        background-position: 100% 50%;
    }

    100% {
        background-position: 0% 50%;
    }

    }

    keyframes fadeInUp {
        from

    {
        opacity: 0;
        transform: translateY(40px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    keyframes slideIn {
        from

    {
        opacity: 0;
        transform: translateX(50px);
    }

    to {
        opacity: 1;
        transform: translateX(0);
    }

    }

    keyframes pulseSlow {
        0%, 100%

    {
        transform: scale(1);
    }

    50% {
        transform: scale(1.05);
    }

    }

    .animate-fade-in-up {
        animation: fadeInUp 1.2s ease-out forwards;
    }

        .animate-fade-in-up.delay-100 {
            animation-delay: 0.15s;
        }

        .animate-fade-in-up.delay-200 {
            animation-delay: 0.3s;
        }

        .animate-fade-in-up.delay-300 {
            animation-delay: 0.45s;
        }

        .animate-fade-in-up.delay-400 {
            animation-delay: 0.6s;
        }

    .animate-slide-in {
        animation: slideIn 1s ease-out forwards;
    }

    .animate-pulse-slow {
        animation: pulseSlow 4s infinite;
    }

    .animate-gradient-flow {
        background-size: 200% 200%;
        animation: gradientFlow 6s ease-in-out infinite;
    }

    .underline-hover:hover {
        text-decoration: none;
    }

    .group:hover .underline-hover {
        text-decoration: none;
    }
</style>

<script>
    document.addEventListener('DOMContentLoaded', function () {
        const radios = document.querySelectorAll('input[name="phuongthuc"]');
        const hiddenInput = document.getElementById('selectedMethod');

        radios.forEach(radio => {
            radio.addEventListener('change', function () {
                hiddenInput.value = this.value;
            });
        });

        document.getElementById('submit-order').addEventListener('click', function (e) {
            if (!document.querySelector('input[name="phuongthuc"]:checked')) {
                alert('Vui lòng chọn phương thức thanh toán');
                e.preventDefault();
            }
        });
    });
</script>
