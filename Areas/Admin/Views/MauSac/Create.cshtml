@model AuthDemo.Models.MauSac
@{
    ViewData["Title"] = "Thêm màu sắc";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="mdi mdi-plus"></i> Thêm màu sắc</h4>
            </div>
            <div class="card-body">
                <form asp-action="Create" asp-controller="MauSac" asp-area="Admin" method="post">
                    <div class="form-group">
                        <label asp-for="MauSacName" class="form-label fw-bold">Tên màu sắc</label>
                        <input asp-for="MauSacName" class="form-control rounded-3" placeholder="Nhập tên màu sắc..." />
                        <span asp-validation-for="MauSacName" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="mdi mdi-content-save"></i> Lưu
                        </button>
                        <a class="btn btn-secondary px-4" href="@Url.Action("Index", "MauSac", new { area = "Admin" })">
                            <i class="mdi mdi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>