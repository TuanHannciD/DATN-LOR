@model AuthDemo.Models.ViewModels.GiayVM
@{
    ViewData["Title"] = "Sửa sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-warning text-white">
                <h4 class="mb-0"><i class="mdi mdi-pencil"></i> Sửa sản phẩm</h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-controller="Giay" asp-area="Admin" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <input type="hidden" asp-for="ShoeID" />
                    <div class="mb-3">
                        <label asp-for="TenGiay" class="form-label fw-bold">Tên sản phẩm</label>
                        <input asp-for="TenGiay" class="form-control rounded-3" />
                        <span asp-validation-for="TenGiay" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="MaGiayCode" class="form-label fw-bold">Mã sản phẩm</label>
                        <input asp-for="MaGiayCode" class="form-control rounded-3" />
                        <span asp-validation-for="MaGiayCode" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="MoTa" class="form-label fw-bold">Mô tả</label>
                        <input asp-for="MoTa" class="form-control rounded-3" />
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="TrangThai" class="form-label fw-bold">Trạng thái</label>
                        <input asp-for="TrangThai" class="form-control rounded-3" />
                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="mdi mdi-content-save"></i> Lưu
                        </button>
                        <a class="btn btn-secondary px-4" href="@Url.Action("Index", "Giay", new { area = "Admin" })">
                            <i class="mdi mdi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div> 