@using X.PagedList.Mvc.Core;
@model X.PagedList.IPagedList<AuthDemo.Models.ViewModels.ProductViewModel>
@using AuthDemo.Models;
@{
    ViewData["Title"] = "Cửa Hàng";
    Layout = "~/Views/Shared/_LayoutShop.cshtml";
}

<!-- Thêm thư viện jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Thêm thư viện jQuery UI cho thanh trượt giá -->
<link rel="stylesheet" href="https://code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.min.js"></script>

<style>
    /* Ẩn mũi tên của ô nhập số */
    input[type=number]::-webkit-inner-spin-button,
    input[type=number]::-webkit-outer-spin-button {
        -webkit-appearance: none;
        margin: 0;
    }

    input[type=number] {
        -moz-appearance: textfield;
    }

    /* Phong cách cho bộ lọc */
    .filter-option {
        display: inline-block;
        padding: 10px 16px;
        margin: 6px 6px 6px 0;
        border: 2px solid #E0E0E0;
        border-radius: 12px;
        cursor: pointer;
        font-size: 15px;
        font-weight: 500;
        color: #1A1A1A;
        background-color: #FAFAFA;
        transition: all 0.3s cubic-bezier(0.25, 1, 0.5, 1);
    }

        .filter-option:hover {
            border-color: #FF6B6B;
            background-color: #FFE8E8;
            transform: scale(1.05);
        }

        .filter-option.selected {
            border: 2px solid #FF6B6B;
            background: linear-gradient(90deg, #FFE8E8, #FFD1D1);
            color: #1A1A1A;
            box-shadow: 0 0 0 3px rgba(255, 107, 107, 0.2);
        }

    /* Phong cách cho thanh trượt giá */
    .ui-slider {
        background: #E0E0E0;
        border: none;
        height: 8px;
        border-radius: 4px;
    }

    .ui-slider-range {
        background: linear-gradient(90deg, #FF6B6B, #FF9292);
    }

    .ui-slider-handle {
        background: #FF6B6B;
        border: 2px solid #FFFFFF;
        width: 20px;
        height: 20px;
        border-radius: 50%;
        top: -6px;
        cursor: pointer;
        transition: transform 0.3s ease;
    }

        .ui-slider-handle:hover {
            transform: scale(1.2);
        }

    .price-input input {
        background: #FAFAFA;
        border: 2px solid #E0E0E0;
        border-radius: 8px;
        padding: 8px;
        font-size: 14px;
        font-weight: 600;
        color: #FF6B6B;
        text-align: center;
        transition: all 0.3s ease;
    }

        .price-input input:focus {
            border-color: #FF6B6B;
            outline: none;
            box-shadow: 0 0 0 3px rgba(255, 107, 107, 0.2);
        }

    /* Phong cách cho sản phẩm giảm giá */
    .product__discount__item__pic {
        background-size: cover;
        background-position: center;
        border-radius: 12px;
        overflow: hidden;
        position: relative;
        transition: all 0.6s cubic-bezier(0.25, 1, 0.5, 1);
    }

    .product__discount__item:hover .product__discount__item__pic {
        transform: scale(1.05);
        box-shadow: 0 15px 30px rgba(255, 107, 107, 0.3);
    }

    .product__discount__percent {
        background: linear-gradient(90deg, #FF6B6B, #FF3D3D);
        color: white;
        padding: 4px 12px;
        border-radius: 12px;
        font-size: 14px;
        font-weight: bold;
        position: absolute;
        top: 10px;
        left: 10px;
    }

    .product__item__pic__hover li a {
        background: #FFFFFF;
        color: #FF6B6B;
        border-radius: 50%;
        width: 40px;
        height: 40px;
        display: flex;
        align-items: center;
        justify-content: center;
        transition: all 0.3s ease;
    }

        .product__item__pic__hover li a:hover {
            background: #FF6B6B;
            color: #FFFFFF;
            transform: scale(1.1);
        }

    /* Phong cách cho phân trang */
    .product__pagination a {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 40px;
        height: 40px;
        margin: 0 4px;
        border: 2px solid #E0E0E0;
        border-radius: 8px;
        color: #1A1A1A;
        font-weight: 500;
        transition: all 0.3s ease;
    }

        .product__pagination a:hover,
        .product__pagination a.active {
            background: linear-gradient(90deg, #FF6B6B, #FF9292);
            border-color: #FF6B6B;
            color: #FFFFFF;
        }
</style>

<!-- Phần tử nền mơ mộng -->
<div class="dream-element" style="width:200px; height:200px; background:#FFE8E8; top:10%; left:5%; animation: dreamFloat 12s ease-in-out infinite;"></div>
<div class="dream-element" style="width:150px; height:150px; background:#C1E3FF; bottom:15%; right:10%; animation: dreamFloat 15s ease-in-out infinite reverse;"></div>

<section class="py-24 bg-primary-50 relative overflow-hidden">
    
    <div class="container mx-auto px-6">
        <div class="text-center mb-16 animate-fade-in">
            <span class="inline-block text-accent-600 font-medium mb-3 tracking-widest">CỬA HÀNG MỘNG MƠ</span>
            <h2 class="text-4xl font-serif font-bold text-primary-900 bg-gradient-to-r from-accent-600 to-accent-400 gradient-text">Khám Phá Bộ Sưu Tập Giày</h2>
            <p class="max-w-xl mx-auto text-primary-600 mt-4">Tìm kiếm đôi giày hoàn hảo để bước vào giấc mơ của bạn.</p>
            <div class="flex flex-col sm:flex-row justify-between items-center mb-12">
                <div class="relative w-full sm:w-1/2 mb-4 sm:mb-0">
                    <form asp-action="Index" method="get">
                        <input type="text" name="searchString" id="searchInput" placeholder="Tên sản phẩm muốn tìm?"
                               value="@ViewBag.SearchString"
                               class="w-full px-6 py-3 rounded-full border border-primary-300 focus:outline-none focus:ring-2 focus:ring-accent-500 text-primary-900">
                        <button type="submit" class="absolute right-4 top-1/2 transform -translate-y-1/2 text-primary-500">
                            <i class="fas fa-search"></i>
                        </button>
                    </form>
                </div>

            </div>
        </div>

        <div class="flex flex-col lg:flex-row gap-8">
            <!-- Sidebar lọc -->
            <div class="lg:w-1/4">
                <div class="sidebar bg-white rounded-2xl p-6 dream-shadow">
                    <!-- Lọc danh mục -->
                    <div class="mb-8">
                        <h4 class="text-xl font-serif font-bold text-primary-900 mb-4">Danh Mục</h4>
                        @foreach (var dm in ViewBag.DanhMucs as List<DanhMuc>)
                        {
                            <div class="filter-block">
                                <input type="radio" name="danhmuc" class="filter-danhmuc-radio" id="dm-@dm.CategoryID" value="@dm.CategoryID" hidden />
                                <label class="filter-option" for="dm-@dm.CategoryID" data-radio="dm-@dm.CategoryID">@dm.TenDanhMuc</label>
                            </div>
                        }
                    </div>

                    <!-- Lọc giá -->
                    <div class="mb-8">
                        <h4 class="text-xl font-serif font-bold text-primary-900 mb-4">Giá</h4>
                        <div class="price-range-wrap">
                            <div class="price-range ui-slider ui-corner-all ui-slider-horizontal ui-widget ui-widget-content"
                                 data-min="@Convert.ToInt32(ViewBag.MinPrice ?? 0)"
                                 data-max="@Convert.ToInt32(ViewBag.MaxPrice ?? 0)">
                                <div class="ui-slider-range ui-corner-all ui-widget-header"></div>
                                <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                                <span tabindex="0" class="ui-slider-handle ui-corner-all ui-state-default"></span>
                            </div>
                            <div class="price-input mt-4">
                                <input type="text" id="minamount" value="@Convert.ToInt32(ViewBag.MinPrice ?? 0)" />
                                <input type="text" id="maxamount" value="@Convert.ToInt32(ViewBag.MaxPrice ?? 0)" />
                            </div>
                        </div>
                    </div>

                    <!-- Lọc màu -->
                    <div class="mb-8">
                        <h4 class="text-xl font-serif font-bold text-primary-900 mb-4">Màu Sắc</h4>
                        @foreach (var color in ViewBag.MauSacs as List<MauSac>)
                        {
                            <div class="filter-block">
                                <input type="radio" name="mau" class="filter-mau-radio" id="mau-@color.ColorID" value="@color.ColorID" hidden />
                                <label class="filter-option" for="mau-@color.ColorID" data-radio="mau-@color.ColorID">@color.TenMau</label>
                            </div>
                        }
                    </div>

                    <!-- Lọc kích thước -->
                    <div class="mb-8">
                        <h4 class="text-xl font-serif font-bold text-primary-900 mb-4">Kích Thước</h4>
                        @foreach (var size in ViewBag.KichThuocs as List<KichThuoc>)
                        {
                            <div class="filter-block">
                                <input type="radio" name="size" class="filter-size-radio" id="size-@size.SizeID" value="@size.SizeID" hidden />
                                <label class="filter-option" for="size-@size.SizeID" data-radio="size-@size.SizeID">@size.TenKichThuoc</label>
                            </div>
                        }
                    </div>

                    <!-- Nút áp dụng -->
                    <button id="apply-filters" class="w-full bg-gradient-to-r from-accent-600 to-accent-400 text-white px-6 py-3 rounded-full font-medium hover:from-accent-700 hover:to-accent-500 transition dream-shadow">
                        Áp Dụng Bộ Lọc
                    </button>
                </div>
            </div>

            <!-- Nội dung chính -->
            <div class="lg:w-3/4">
                <!-- Sản phẩm giảm giá -->
                <div class="mb-12">
                    <h3 class="text-2xl font-serif font-bold text-primary-900 mb-6 bg-gradient-to-r from-accent-600 to-accent-400 gradient-text">Giảm Giá Đặc Biệt</h3>
                    <div class="relative">
                        <div class="product__discount__slider owl-carousel grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6">
                            <div class="product__discount__item product-card bg-white rounded-2xl overflow-hidden dream-shadow">
                                <div class="product__discount__item__pic set-bg"
                                     data-setbg="img/product/discount/pd-2.jpg">
                                    <div class="product__discount__percent">-20%</div>
                                    <ul class="product__item__pic__hover absolute bottom-4 right-4 flex flex-col gap-2">
                                        <li><a href="#"><i class="fa fa-heart"></i></a></li>
                                        <li><a href="#"><i class="fa fa-retweet"></i></a></li>
                                        <li><a href="#"><i class="fa fa-shopping-cart"></i></a></li>
                                    </ul>
                                </div>
                                <div class="product__discount__item__text p-4">
                                    <span class="text-primary-500">Vegetables</span>
                                    <h5 class="font-medium text-primary-900 hover:text-accent-600 transition">
                                        <a href="#">Vegetables’ package</a>
                                    </h5>
                                    <div class="product__item__price text-accent-600 font-bold">
                                        $30.00 <span class="text-primary-500 line-through">$36.00</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Danh sách sản phẩm -->
                <!-- Danh sách sản phẩm -->
                <div class="mb-12">
                    <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-6" id="product-list">
                        @Html.Partial("_ProductListPartial", Model.ToList())
                    </div>
                </div>

                <!-- Phân trang -->
                <div class="text-center mt-16">
                    @if (Model.HasPreviousPage)
                    {
                        <a href="@Url.Action("Index", "Shop", new { page = Model.PageNumber - 1 })" class="inline-flex items-center px-4 py-2 border border-primary-300 hover:border-accent-600 text-primary-900 hover:text-accent-600 rounded-full font-medium transition mr-2">
                            Trang Trước
                        </a>
                    }
                    <span class="text-primary-600 mx-4">Trang @Model.PageNumber / @Model.PageCount</span>
                    @if (Model.HasNextPage)
                    {
                        <a href="@Url.Action("Index", "Shop", new { page = Model.PageNumber + 1 })" class="inline-flex items-center px-4 py-2 border border-primary-300 hover:border-accent-600 text-primary-900 hover:text-accent-600 rounded-full font-medium transition ml-2">
                            Trang Sau
                        </a>
                    }
                    <div class="mt-4">
                        <a href="@Url.Action("Index", "Shop")" class="inline-flex items-center border-2 border-primary-300 hover:border-accent-600 text-primary-900 hover:text-accent-600 px-8 py-3 rounded-full font-medium transition">
                            Xem Thêm Giày  <i class="fas fa-arrow-right ml-3"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
       

        $(document).ready(function () {
            $("#searchInput").autocomplete({
                source: function (request, response) {
                    $.ajax({
                        url: "/Shop/GetSearchSuggestions",
                        dataType: "json",
                        data: {
                            term: request.term
                        },
                        success: function (data) {
                            response(data);
                        }
                    });
                },
                minLength: 2,
                select: function (event, ui) {
                    $("#searchInput").val(ui.item.value);
                    $("#searchInput").closest("form").submit();
                }
            });
            // Format tiền Việt Nam
            function formatVND(val) {
                return Number(val).toLocaleString('vi-VN') + " đ";
            }
            function setBackgroundImages() {
                $('.set-bg').each(function () {
                    var bg = $(this).data('setbg');
                    $(this).css('background-image', 'url(' + bg + ')');
                });
            }

            $(document).ready(function () {
                setBackgroundImages(); // chạy khi trang load
            });
            function unformatVND(str) {
                return parseInt(str.replace(/[^\d]/g, '')) || 0;
            }

            // Khởi tạo thanh trượt giá
            (function () {
                const $priceRange = $(".price-range");
                const min = parseInt($priceRange.data("min"));
                const max = parseInt($priceRange.data("max"));
                const $minInput = $("#minamount");
                const $maxInput = $("#maxamount");

                const currentMin = unformatVND($minInput.val());
                const currentMax = unformatVND($maxInput.val());

                $priceRange.slider({
                    range: true,
                    min: min,
                    max: max,
                    values: [currentMin, currentMax],
                    slide: function (event, ui) {
                        $minInput.val(formatVND(ui.values[0]));
                        $maxInput.val(formatVND(ui.values[1]));
                    }
                });

                // Format lần đầu
                $minInput.val(formatVND(currentMin));
                $maxInput.val(formatVND(currentMax));

                // Xử lý nhập tay giá
                $minInput.on("change", function () {
                    const val = unformatVND($(this).val());
                    $priceRange.slider("values", 0, val);
                    $(this).val(formatVND(val));
                });

                $maxInput.on("change", function () {
                    const val = unformatVND($(this).val());
                    $priceRange.slider("values", 1, val);
                    $(this).val(formatVND(val));
                });
            })();

            // Xử lý chọn bộ lọc kiểu toggle radio
            function setupExclusiveSelectable(groupName) {
                $(`label[for^='${groupName}-']`).click(function (e) {
                    e.preventDefault();
                    const label = $(this);
                    const radioId = label.attr('for');
                    const radio = $('#' + radioId);

                    if (label.hasClass('selected')) {
                        label.removeClass('selected');
                        radio.prop('checked', false);
                    } else {
                        $(`label[for^='${groupName}-']`).removeClass('selected');
                        $(`input[name='${radio.attr("name")}']`).prop('checked', false);

                        label.addClass('selected');
                        radio.prop('checked', true);
                    }
                });
            }

            setupExclusiveSelectable('dm');
            setupExclusiveSelectable('mau');
            setupExclusiveSelectable('size');

            // Gửi dữ liệu lọc
            $('#apply-filters').click(function () {
                const min = unformatVND($('#minamount').val());
                const max = unformatVND($('#maxamount').val());

                const danhMucId = $('.filter-danhmuc-radio:checked').val();
                const mauSacId = $('.filter-mau-radio:checked').val();
                const kichThuocId = $('.filter-size-radio:checked').val();

                $.ajax({
                    url: '/Shop/FilterProducts',
                    method: 'POST',
                    data: {
                        danhMucIds: danhMucId ? [danhMucId] : [],
                        mauSacIds: mauSacId ? [mauSacId] : [],
                        kichThuocIds: kichThuocId ? [kichThuocId] : [],
                        minPrice: min,
                        maxPrice: max
                    },
                    success: function (data) {
                        $('#product-list').html(data);

                        // Re-apply background images
                        $('#product-list .set-bg').each(function () {
                            var bg = $(this).data('setbg');
                            if (bg && bg.trim() !== "") {
                                $(this).css('background-image', 'url(' + bg + ')');
                            }
                        });
                    }
                });
            });
        });
    </script>
}