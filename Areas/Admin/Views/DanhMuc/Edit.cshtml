@model AuthDemo.Models.DanhMuc
@{
    ViewData["Title"] = "Sửa danh mục";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-warning text-white d-flex align-items-center">
                <h4 class="mb-0">
                    <i class="mdi mdi-pencil me-2"></i> Sửa danh mục
                </h4>
            </div>
            <div class="card-body">
                <form asp-action="Edit" asp-controller="DanhMuc" asp-area="Admin" method="post">
                    @* Ẩn ID danh mục *@
                    <input type="hidden" asp-for="CategoryID" />

                    <div class="mb-3">
                        <label asp-for="TenDanhMuc" class="form-label fw-bold">Tên danh mục</label>
                        <input asp-for="TenDanhMuc" class="form-control rounded-3" data-validate="required|min:3"
                            data-label="Tên danh mục" placeholder="Nhập tên danh mục..." />
                        <span asp-validation-for="TenDanhMuc" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MaDanhMucCode" class="form-label fw-bold">Mã danh mục</label>
                        <input asp-for="MaDanhMucCode" class="form-control rounded-3" data-validate="required|min:3"
                            data-label="Mã danh mục" placeholder="Nhập mã danh mục..." />
                        <span asp-validation-for="MaDanhMucCode" class="text-danger"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="MoTa" class="form-label fw-bold">Mô tả</label>
                        <input asp-for="MoTa" class="form-control rounded-3" data-validate="required|min:3"
                            data-label="Mô tả" placeholder="Nhập mô tả..." />
                        <span asp-validation-for="MoTa" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success px-4">
                            <i class="mdi mdi-content-save"></i> Lưu
                        </button>
                        <a class="btn btn-secondary px-4"
                            href="@Url.Action("Index", "DanhMuc", new { area = "Admin" })">
                            <i class="mdi mdi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
