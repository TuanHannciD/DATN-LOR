    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        dark: '#0F0F0F',
                        light: '#F8F8F8',
                        primary: {
                            DEFAULT: '#1A1A1A',
                            50: '#FAFAFA',
                            100: '#F5F5F5',
                            200: '#EEEEEE',
                            300: '#E0E0E0',
                            400: '#BDBDBD',
                            500: '#9E9E9E',
                            600: '#757575',
                            700: '#616161',
                            800: '#424242',
                            900: '#1A1A1A',
                        },
                        accent: {
                            DEFAULT: '#FF6B6B',
                            100: '#FFE8E8',
                            200: '#FFD1D1',
                            300: '#FFB9B9',
                            400: '#FF9292',
                            500: '#FF6B6B',
                            600: '#FF3D3D',
                            700: '#FF0F0F',
                            800: '#D60000',
                            900: '#A80000',
                        },
                    },
                    fontFamily: {
                        sans: ['Montserrat', 'sans-serif'],
                        serif: ['Playfair Display', 'serif'],
                    },
                    animation: {
                        'fade-in': 'fadeIn 1.2s ease-out',
                        'float': 'float 8s ease-in-out infinite',
                        'dream-float': 'dreamFloat 12s ease-in-out infinite',
                        'pulse-slow': 'pulse 6s cubic-bezier(0.4, 0, 0.6, 1) infinite',
                        'spin-slow': 'spin 20s linear infinite',
                        'bounce-slow': 'bounce 3s infinite',
                        'touch-pulse': 'touchPulse 0.3s ease-out',
                        'gradient-flow': 'gradientFlow 5s ease-in-out infinite',
                    },
                    keyframes: {
                        fadeIn: {
                            '0%': { opacity: '0', transform: 'translateY(20px)' },
                            '100%': { opacity: '1', transform: 'translateY(0)' },
                        },
                        float: {
                            '0%, 100%': { transform: 'translateY(0)' },
                            '50%': { transform: 'translateY(-20px)' },
                        },
                        dreamFloat: {
                            '0%, 100%': { transform: 'translateY(0) rotate(0deg)' },
                            '25%': { transform: 'translateY(-30px) rotate(5deg)' },
                            '50%': { transform: 'translateY(-10px) rotate(-5deg)' },
                            '75%': { transform: 'translateY(-20px) rotate(3deg)' },
                        },
                        touchPulse: {
                            '0%': { transform: 'scale(1)', boxShadow: '0 0 0 0 rgba(255, 107, 107, 0.7)' },
                            '70%': { transform: 'scale(1.05)', boxShadow: '0 0 0 10px rgba(255, 107, 107, 0)' },
                            '100%': { transform: 'scale(1)', boxShadow: '0 0 0 0 rgba(255, 107, 107, 0)' },
                        },
                        gradientFlow: {
                            '0%': { backgroundPosition: '0% 50%' },
                            '50%': { backgroundPosition: '100% 50%' },
                            '100%': { backgroundPosition: '0% 50%' },
                        }
                    }
                }
            }
        }
    </script>
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        body {
            background-color: #F8F8F8;
            color: #1A1A1A;
            overflow-x: hidden;
        }

        .dream-bg {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: -1;
            background: linear-gradient(135deg, #FFE8E8 0%, #F8F8F8 50%, #E0F7FA 100%);
            opacity: 0.3;
        }

        .dream-element {
            position: absolute;
            border-radius: 50%;
            filter: blur(40px);
            opacity: 0.4;
            z-index: -1;
        }

        .nav-link {
            position: relative;
            transition: all 0.4s cubic-bezier(0.25, 1, 0.5, 1);
        }

            .nav-link::after {
                content: '';
                position: absolute;
                bottom: -4px;
                left: 0;
                width: 0;
                height: 2px;
                background-color: #FF6B6B;
                transition: width 0.4s cubic-bezier(0.25, 1, 0.5, 1);
            }

            .nav-link:hover::after,
            .nav-link.active::after {
                width: 100%;
            }

        .product-card {
            transition: all 0.6s cubic-bezier(0.25, 1, 0.5, 1);
        }

            .product-card:hover,
            .product-card:active {
                transform: translateY(-10px) scale(1.02);
                box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.15);
                animation: touchPulse 0.3s ease-out;
            }

        .category-card {
            transition: all 0.6s cubic-bezier(0.25, 1, 0.5, 1);
            transform-style: preserve-3d;
        }

            .category-card:hover,
            .category-card:active {
                transform: perspective(1000px) rotateX(5deg) rotateY(5deg) scale(1.03);
                animation: touchPulse 0.3s ease-out;
            }

        .gradient-text {
            background-clip: text;
            -webkit-background-clip: text;
            color: transparent;
        }

        .dream-shadow {
            box-shadow: 0 10px 30px -10px rgba(255, 107, 107, 0.3);
        }

        .scrollbar-hide::-webkit-scrollbar {
            display: none;
        }

        .dream-1 {
            width: 300px;
            height: 300px;
            background: #FFC1C1;
            top: 10%;
            left: 5%;
            animation: dreamFloat 15s ease-in-out infinite;
        }

        .dream-2 {
            width: 200px;
            height: 200px;
            background: #C1E3FF;
            bottom: 15%;
            right: 10%;
            animation: dreamFloat 18s ease-in-out infinite reverse;
        }

        .dream-3 {
            width: 250px;
            height: 250px;
            background: #D1C1FF;
            top: 40%;
            right: 20%;
            animation: dreamFloat 20s ease-in-out infinite 2s;
        }

        .dream-4 {
            width: 180px;
            height: 180px;
            background: #FFE8C1;
            bottom: 25%;
            left: 15%;
            animation: dreamFloat 16s ease-in-out infinite reverse 3s;
        }

        .floating-sneaker {
            position: absolute;
            animation: dreamFloat 15s ease-in-out infinite;
            z-index: -1;
            opacity: 0.2;
            filter: blur(2px);
        }

        .dream-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: radial-gradient(circle at center, rgba(255,255,255,0) 0%, rgba(255,255,255,0.8) 100%);
            pointer-events: none;
            z-index: 100;
            mix-blend-mode: overlay;
        }

        .header-gradient {
            background: linear-gradient(90deg, #FF6B6B, #FF9292, #FFE8E8, #FF9292, #FF6B6B);
            background-size: 200% 200%;
            animation: gradientFlow 5s ease-in-out infinite;
        }

        .nav-item:hover {
            transform: translateY(-2px);
            transition: transform 0.3s ease;
        }

        .header-shadow {
            box-shadow: 0 4px 20px rgba(255, 107, 107, 0.2);
        }
    </style>
</head>
