@model AuthDemo.Models.ViewModels.ChiTietGiayVM.EditVM
@{
    ViewData["Title"] = "Thêm sản phẩm chi tiết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card">
            <div class="card-header bg-primary text-white">
                <h4 class="mb-0"><i class="mdi mdi-plus"></i> Thêm sản phẩm chi tiết</h4>
            </div>
            <div class="card-body">
                <div asp-validation-summary="All" class="text-danger"></div>
                <form asp-action="Create" asp-controller="ChiTietGiay" asp-area="Admin" method="post">
                    <div class="form-group">
                        <label asp-for="ShoeID" class="form-label fw-bold">Sản phẩm</label>
                        <select asp-for="ShoeID" class="form-control rounded-3" asp-items="ViewBag.GiayList"></select>
                        <span asp-validation-for="ShoeID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SizeID" class="form-label fw-bold">Kích thước</label>
                        <select asp-for="SizeID" class="form-control rounded-3" asp-items="ViewBag.SizeList"></select>
                        <span asp-validation-for="SizeID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ColorID" class="form-label fw-bold">Màu sắc</label>
                        <select asp-for="ColorID" class="form-control rounded-3" asp-items="ViewBag.ColorList"></select>
                        <span asp-validation-for="ColorID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaterialID" class="form-label fw-bold">Chất liệu</label>
                        <select asp-for="MaterialID" class="form-control rounded-3" asp-items="ViewBag.MaterialList"></select>
                        <span asp-validation-for="MaterialID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="BrandID" class="form-label fw-bold">Thương hiệu</label>
                        <select asp-for="BrandID" class="form-control rounded-3" asp-items="ViewBag.BrandList"></select>
                        <span asp-validation-for="BrandID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="CategoryID" class="form-label fw-bold">Danh mục</label>
                        <select asp-for="CategoryID" class="form-control rounded-3" asp-items="ViewBag.CategoryList"></select>
                        <span asp-validation-for="CategoryID" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="SoLuong" class="form-label fw-bold">Số lượng</label>
                        <input asp-for="SoLuong" class="form-control rounded-3" type="number" data-validate="required" data-label="Số lượng" />
                        <span asp-validation-for="SoLuong" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Gia" class="form-label fw-bold">Giá</label>
                        <input asp-for="Gia" class="form-control rounded-3" type="number" data-validate="required|minValue:3" data-label="Giá">
                        <span asp-validation-for="Gia" class="text-danger"></span>
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success px-4" data-skip-validate="true">
                            <i class="mdi mdi-content-save"></i> Lưu
                        </button>
                        <a class="btn btn-secondary px-4"
                            href="@Url.Action("Index", "ChiTietGiay", new { area = "Admin" })">
                            <i class="mdi mdi-arrow-left"></i> Quay lại
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

