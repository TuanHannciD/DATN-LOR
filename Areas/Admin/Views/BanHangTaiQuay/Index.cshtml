                case 1: icon = '<i class="mdi mdi-package-variant me-1"></i>'; break;
                case 2: icon = '<i class="mdi mdi-store me-1"></i>'; break;
            }
            return $('<span>' + icon + state.text + '</span>');
        },
        escapeMarkup: function (m) { return m; }
    });
});
