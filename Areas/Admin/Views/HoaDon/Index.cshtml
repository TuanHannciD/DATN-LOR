@model IEnumerable<AuthDemo.Models.ViewModels.GetAllHoaDonVM>
@{
    ViewData["Title"] = "Danh sách hóa đơn";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<div class="card mt-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0"><i class="mdi mdi-file-document-box"></i> Danh sách hóa đơn</h4>

    </div>
    <div class="card-body p-0">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Khách hàng</th>
                        <th>SĐT</th>
                        <th>Email</th>
                        <th>Trạng thái đơn hàng</th>
                        <th>Hình thức thanh toán</th>
                        <th>Hình thức vận chuyển</th>
                        <th>Tổng tiền</th>
                        <th>Trạng thái thanh toán</th>
                        <th>Người tạo</th>
                        <th>Ngày tạo</th>
                        <th>Người cập nhật</th>
                        <th>Ngày cập nhật</th>

                        @* <th class="text-center">Thao tác</th> *@
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.TenKhachHang</td>
                            <td>@item.SoDienThoai</td>
                            <td>@item.Email</td>
                            <td>
                                <span class="badge  status-badge" data-id="@item.HoaDonID" style="cursor:pointer;" >
                                   
                                        @item.TrangThaiDisplay
                                    
                                    
                                </span>
                            </td>

                            <td>@item.HinhThucThanhToanDisplay</td>
                            <td>@item.HinhThucVanChuyenDisplay</td>
                            <td><span class="badge bg-success">@item.TongTien.ToString("N0")</span></td>
                            <td>@(item.DaThanhToan ? "Đã thanh toán" : "Chưa thanh toán")</td>
                            <td>@item.NguoiTao</td>
                            <td>
                                @if (item.NgayTao.HasValue)
                                {
                                    <span class="badge bg-light text-dark px-2 py-1 rounded-2 shadow-sm">
                                        @item.NgayTao.Value.ToString("HH:mm dd/MM/yyyy")
                                    </span>
                                }
                            </td>
                            <td>@item.NguoiCapNhat</td>
                            <td>
                                @if (item.NgayCapNhat.HasValue)
                                {
                                    <span class="badge bg-light text-dark px-2 py-1 rounded-2 shadow-sm">
                                        @item.NgayCapNhat.Value.ToString("HH:mm dd/MM/yyyy")
                                    </span>
                                }
                            </td>
                            @* <td class="text-center">
                                <a class="btn btn-info btn-sm me-1" href="#">
                                    <i class="mdi mdi-eye"></i> Xem
                                </a>
                                <a class="btn btn-warning btn-sm me-1" href="#">
                                    <i class="mdi mdi-pencil"></i> Sửa
                                </a>
                                <a class="btn btn-danger btn-sm btn-huy-hoa-don" href="#" data-id="@item.HoaDonID">
                                    <i class="mdi mdi-delete"></i> Hủy 
                                </a>

                            </td> *@
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>




@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script type="module" src="~/js/hoadon.js"></script>
}
