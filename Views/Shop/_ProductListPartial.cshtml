@model List<AuthDemo.Models.ViewModels.ProductViewModel>


@foreach (var product in Model)
{
    <div class="col-lg-4 col-md-6 col-sm-6">
        <div class="product__item product-card bg-white rounded-xl overflow-hidden dream-shadow transition-all duration-600 animate-fade-in"
             style="width: 100%; height: 250px;">
            <div class="product__item__pic relative set-bg"
                 data-setbg="@(string.IsNullOrEmpty(product.AnhDaiDien)
        ? Url.Content("~/img/no-image.png")
        : Url.Content("~/AnhDoiGiay/" + product.AnhDaiDien))"
                 style="width: 100%; height: 200px; background-size: cover; background-position: center; border-radius: 8px 8px 0 0;">
            </div>
            <div class="product__item__text p-2 flex flex-col justify-between h-[50px]">
                <h6 class="font-serif font-medium text-primary-900 hover:text-accent-600 transition text-sm line-clamp-1">
                    <a asp-controller="Home" asp-action="SanPhamDetails" asp-route-id="@product.ShoeID">@product.TenGiay</a>
                </h6>
                <h5 class="text-sm font-bold text-accent-600 mt-0.5">@product.GiaThapNhat.ToString("N0") VNĐ</h5>
            </div>
        </div>
    </div>
}